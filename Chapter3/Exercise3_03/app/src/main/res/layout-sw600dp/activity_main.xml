<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <fragment
      android:id="@+id/starsignlist"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:name="com.example.andriod.exercise3_03.ListFragment"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="?android:dividerVertical"/>

    <fragment
        android:id="@+id/starsigndetail"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:name="com.example.andriod.exercise3_03.DetailFragment"/>

</LinearLayout>